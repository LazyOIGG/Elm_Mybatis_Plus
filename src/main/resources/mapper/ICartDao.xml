<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ynu.edu.dao.ICartDao">

    <resultMap type="ynu.edu.entity.Cart" id="cartResultMap">
        <id column="cartId" property="cartId"/>
        <result column="foodId" property="foodId"/>
        <result column="businessId" property="businessId"/>
        <result column="userId" property="userId"/>
        <result column="quantity" property="quantity"/>
    </resultMap>

    <!-- 查询购物车 -->
    <select id="listCart" parameterType="ynu.edu.entity.Cart" resultMap="cartResultMap">
        SELECT * FROM cart
        <where>
            userId = #{userId}
            <if test="businessId != null">
                AND businessId = #{businessId}
            </if>
        </where>
        ORDER BY cartId
    </select>

    <!-- 保存购物车项 -->
    <insert id="saveCart" parameterType="ynu.edu.entity.Cart">
        INSERT INTO cart(foodId, businessId, userId, quantity)
        VALUES(#{foodId}, #{businessId}, #{userId}, 1)
    </insert>

    <!-- 更新购物车项数量 -->
    <update id="updateCart" parameterType="ynu.edu.entity.Cart">
        UPDATE cart SET quantity = #{quantity}
        WHERE foodId = #{foodId} AND businessId = #{businessId} AND userId = #{userId}
    </update>

    <!-- 移除购物车项 -->
    <delete id="removeCart" parameterType="ynu.edu.entity.Cart">
        DELETE FROM cart
        <where>
            userId = #{userId} AND businessId = #{businessId}
            <if test="foodId != null">
                AND foodId = #{foodId}
            </if>
        </where>
    </delete>
</mapper>